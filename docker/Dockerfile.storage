# USE THE OFFICIAL MYSQL IMAGE
FROM mysql:8.0

# THIS IS A SPECIFIC KNOWN LOCATION WITHIN THE OFFICIAL MYSQL IMAGE
# THIS WILL INITIALIZE THE DATABASE
COPY database/init.sql /docker-entrypoint-initdb.d/

#EXPOSE 3306 (DEFAULT PORT FOR MYSQL)
EXPOSE 3306

# SET THE my_sql VOLUME
VOLUME ["/var/lib/mysql"]